# ===========================================
# OpenCongress Environment Variables
# ===========================================
# Copy this file to .env and fill in the values
# Most features work without optional vars

# Django
# ------
DEBUG=1
SECRET_KEY=change-me-generate-with-python-c-"from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
# ---------------------
DB_NAME=congresstrack
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5433

# Alternative: Use DATABASE_URL instead of individual DB vars
# DATABASE_URL=postgresql://postgres:postgres@localhost:5433/congresstrack

# Redis
# -----
REDIS_URL=redis://localhost:6379/0

# JWT
# ---
JWT_SECRET_KEY=change-me-to-a-random-string

# Auth Sync (shared secret between Next.js Auth.js and Django)
# ------------------------------------------------------------
AUTH_SYNC_SECRET=change-me-to-a-random-string

# Encryption (for user API key storage — required in production)
# --------------------------------------------------------------
# ENCRYPTION_KEY=generate-a-fernet-key

# External API Keys
# -----------------
# Congress.gov API — Primary data source
# Get your free key at: https://api.data.gov/signup/
CONGRESS_API_KEY=your-congress-gov-api-key

# FEC OpenFEC API — Campaign finance data
# Get your free key at: https://api.data.gov/signup/
# FEC_API_KEY=your-fec-api-key

# Google Civic Information API (optional)
# GOOGLE_CIVIC_API_KEY=your-google-civic-api-key

# Google API Key (optional)
# GOOGLE_API_KEY=your-google-api-key

# Email (SendGrid) — optional for local dev
# ------------------------------------------
# EMAIL_HOST=smtp.sendgrid.net
# EMAIL_PORT=587
# EMAIL_HOST_USER=apikey
# EMAIL_HOST_PASSWORD=your-sendgrid-api-key
# DEFAULT_FROM_EMAIL=noreply@opencongress.app

# Monitoring (Sentry) — optional
# -------------------------------
# SENTRY_DSN=your-sentry-dsn
ENVIRONMENT=development

# Discord Alerts — optional
# --------------------------
# DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Frontend (Next.js)
# -------------------
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
BACKEND_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000

# Auth.js (Next.js)
# ------------------
AUTH_SECRET=change-me-generate-with-npx-auth-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ISR Revalidation
# -----------------
# REVALIDATION_SECRET=change-me-to-a-random-string

# Admin (only needed for initial migration)
# ------------------------------------------
# ADMIN_PASSWORD=your-admin-password
