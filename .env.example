# ===========================================
# CongressTrack Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Django
# ------
DEBUG=0
SECRET_KEY=your-secret-key-here-generate-a-new-one
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
# ---------------------
DB_NAME=congresstrack
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Alternative: Use DATABASE_URL instead of individual DB vars
# DATABASE_URL=postgresql://postgres:postgres@db:5432/congresstrack

# Redis
# -----
REDIS_URL=redis://localhost:6379/0

# JWT
# ---
JWT_SECRET_KEY=your-jwt-secret-key-here

# External API Keys
# -----------------
# Congress.gov API - Primary data source (https://api.congress.gov/)
# Get your free key at: https://api.data.gov/signup/
CONGRESS_API_KEY=your-congress-gov-api-key

# Google Civic Information API (https://developers.google.com/civic-information)
GOOGLE_CIVIC_API_KEY=your-google-civic-api-key

# OpenAI API for AI summaries (https://platform.openai.com/)
OPENAI_API_KEY=your-openai-api-key

# Email (SendGrid)
# ----------------
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@congresstrack.org

# Monitoring (Sentry)
# -------------------
SENTRY_DSN=your-sentry-dsn
ENVIRONMENT=development

# Auth Sync (shared secret between Next.js Auth.js and Django)
# ----------------------------------------------------------
AUTH_SYNC_SECRET=your-auth-sync-secret-here

# Frontend
# --------
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1

# Auth.js (Next.js)
AUTH_SECRET=your-auth-secret-here-generate-with-npx-auth-secret
BACKEND_URL=http://localhost:8000
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
